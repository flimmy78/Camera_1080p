<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bar_01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:visibility="gone">
    <Button
        android:id="@+id/btn_left"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/btn_left_port"/>
    <Button
        android:id="@+id/btn_select"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_above="@+id/btn_audio"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_xlarge"
        android:background="@drawable/btn_shape"
        android:text="@string/play_fluency"/>

    <View
        android:id="@+id/first"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/btn_audio"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toLeftOf="@+id/first"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:background="@drawable/audio_selector"/>

    <Button
        android:id="@+id/btn_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@+id/first"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:background="@drawable/photo_selector"/>

    <View
        android:id="@+id/second"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/first"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <Button
        android:id="@+id/btn_microphone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toLeftOf="@+id/second"
        android:layout_below="@+id/first"
        android:background="@drawable/voice_selector"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>
    <Button
        android:id="@+id/btn_lock"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/second"
        android:layout_below="@+id/first"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/lock_selector"/>

    <Button
        android:id="@+id/btn_right"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_right_port"/>
</android.support.percent.PercentRelativeLayout>